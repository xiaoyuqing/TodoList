.todo-container{
}
.top{
  background-color: #333;
  padding: 20px 15px;
}
.title{
  color: #DDD;
  font-size: 48rpx;
}
.todo-input{
  text-indent: 20rpx;
  border-radius: 10rpx;
  margin: 20rpx 20rpx 0 0;
  height: 48rpx;
  box-shadow: 0 2rpx 0 rgba(255,255,255,0.24), 0 2rpx 6rpx rgba(0,0,0,0.45) inset;
  background-color: #fff;
  padding: 10rpx;
}
.add-button{
  margin: 15px 0 0 0;
}
.page-list{
  padding: 0 40rpx;
}
.page-title{
  font-size: 48rpx;
  font-weight: bold;
  color: #000;
  margin: 40rpx 0;
  position: relative;
}
#todocount{
  position: absolute;
  top: 2px;
  right: 5px;
  display: inline-block;
  padding: 0 5px;
  height: 20px;
  border-radius: 20px;
  background: #E6E6FA;
  line-height: 22px;
  text-align: center;
  color: #666;
  font-size: 14px;
}
.checkbox{
  position: relative;
  height: 32px;
  line-height: 32px;
  background: #ddd;
  margin-bottom: 10px;
  padding: 0 15px;
  border-radius: 3px;
  border-left: 5px solid #629A9C;
  box-shadow: 0 1px 2px rgba(0,0,0,0.07);
  display: flex;
}
.done-list .checkbox{
  opacity: 0.5;
}
.input-2{
  display: inline-block;
  margin-top: 3px;
}
.delete{
  position: absolute;
  top: 4px;
  right: 10px;
  display: inline-block;
  width: 14px;
  height: 12px;
  border-radius: 14px;
  border: 6px double #FFF;
  background: #CCC;
  line-height: 12px;
  text-align: center;
  color: #FFF;
  font-weight: bold;
  font-size: 14px;
  cursor: pointer;
}